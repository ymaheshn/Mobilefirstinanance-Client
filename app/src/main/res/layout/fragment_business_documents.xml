<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg"
                android:orientation="vertical"
                tools:context="onboard.OnBoardFragment">
    <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:background="@color/toolbar_color"
            android:layout_height="50dp">
        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="Business Documents"
                android:textSize="@dimen/toolbar_title"
                android:textStyle="bold"
                android:textColor="@color/white_color"
                android:layout_height="match_parent" android:layout_centerInParent="true"/>
        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:paddingStart="@dimen/_10dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_back"
                android:layout_height="30dp" android:layout_centerInParent="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/text_load_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:padding="@dimen/_10dp"
            android:visibility="gone"
            android:textSize="@dimen/sp_18"
            android:text="No Documents Available"
            android:textColor="@color/colorBlack"/>
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/_10dp"
            android:visibility="gone"/>


</RelativeLayout>
