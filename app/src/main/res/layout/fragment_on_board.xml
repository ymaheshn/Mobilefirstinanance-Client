    <RelativeLayout
        android:id="@+id/addClientLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_add_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10dp"
            android:text="Add client"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/text_add_client"
            android:layout_toRightOf="@+id/text_add_client"
            android:src="@drawable/ic_add_client"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/text_clears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|end"
            android:padding="@dimen/_10dp"
            android:text="Clear"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addClientLL"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:visibility="gone" />

    <!--  <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_text_search_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableEnd="@drawable/ic_search_new"
        android:hint="Search" />-->


    <FrameLayout
        android:id="@+id/tabs_profile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/search_profile"
        android:layout_margin="5dp"
        android:background="@drawable/tab_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_selector"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hierarchy" />

            <TextView
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="National Id" />

            <TextView
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Identifier" />

        </LinearLayout>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clientsRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/progressBar"
        android:layout_below="@+id/tabs_profile"
        android:layout_marginTop="@dimen/_5dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searched_profile_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/progressBar"
        android:layout_below="@+id/tabs_profile"
        android:layout_marginTop="@dimen/_5dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/_10dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/noClientsTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="No Clients Available"
        android:textColor="@android:color/black"
        android:visibility="gone" />
</RelativeLayout>
