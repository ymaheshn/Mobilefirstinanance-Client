    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/product_name"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_toEndOf="@+id/product_name_tv"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            tools:text="Mahesh" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contract_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/contract_id"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contract_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/contract_id_tv"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            tools:text="Mahesh" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notional_principle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contract_id"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/notional_principal"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notional_principle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contract_id"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/notional_principle_tv"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            tools:text="Mahesh" />

    </RelativeLayout>

