<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--for Text input layout-->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscren</item>
        <item name="android:windowTranslucentStatus" >true</item>
        <item name="android:windowTranslucentNavigation" >true</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#D3D3D3</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditText_Wrap" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFooter</item>
        <item name="android:padding">@dimen/_5dp</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edittext_line_bg</item>
    </style>

    <style name="Switch_Style_Theme">
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

</resources>
